{
  "name": "pdfplum",
  "version": "0.18.0",
  "description": "Generate PDF documents from templates stored in Firebase Storage",
  "author": "PDFPlum (hi@pdfplum.com)",
  "repository": "https://github.com/pdfplum/pdfplum",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "format": "eslint --fix --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf ./build/",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "test": "jest"
  },
  "engines": {
    "node": "18"
  },
  "main": "build/src/index.js",
  "dependencies": {
    "@sparticuz/chromium": "126.0",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "firebase": "^10.12.5",
    "firebase-admin": "^12.3.0",
    "firebase-functions": "^5.0.1",
    "firebase-functions-test": "^3.3.0",
    "get-port-please": "^3.1.2",
    "googleapis": "^140.0.1",
    "handlebars": "^4.7.8",
    "handlebars-helpers": "^0.10.0",
    "jest": "^29.7.0",
    "jszip": "^3.10.1",
    "module-alias": "^2.2.3",
    "path": "^0.12.7",
    "puppeteer-core": "^22.13.1",
    "serve-static": "^1.15.0",
    "ts-jest": "^29.2.4",
    "typescript": "^5.5.4"
  },
  "_moduleAliases": {
    "lib": "build/lib",
    "src": "build/src"
