{
  "version": "0.19.0",
  "scripts": {
    "format:code": "cd pdf-generator/functions && npm run format",
    "format:config": "prettier --write \"**/*.{json,yml,yaml}\"",
    "format:documents": "prettier --write \"**/*.md\"",
    "format": "npm run format:code && npm run format:config && npm run format:documents",
    "lint:http-pdf-generator": "cd http-pdf-generator/functions && npm run lint",
    "lint:firestore-pdf-generator": "cd firestore-pdf-generator/functions && npm run lint",
    "lint:code": "npm run lint:http-pdf-generator && npm run lint:firestore-pdf-generator",
    "lint:config": "prettier --list-different \"**/*.{json,yml,yaml}\"",
    "lint:documents": "prettier --list-different \"**/*.md\"",
    "lint": "npm run lint:code && npm run lint:config && npm run lint:documents",
    "test": "cd pdf-generator/functions && npm run test",
    "deploy": "firebase deploy --only extensions",
    "publish": "scripts/publish.sh",
    "publish:update": "npm run update && scripts/publish.sh",
    "update:extension-specific-stuff": "scripts/update-extension-specific-stuff.js",
    "update:documents": "scripts/update-documents.js",
    "update:samples": "scripts/update-samples.sh",
    "update:versions": "scripts/update-versions.js",
    "update": "npm run update:extension-specific-stuff && npm run update:documents && npm run update:samples && npm run update:versions",
    "sync:lib": "scripts/sync-lib.sh",
    "dev:run": "scripts/run.js --open-pdf",
    "dev:run:headful": "scripts/run.js --open-pdf --headful",
    "logs": "firebase functions:log"
  },
  "devDependencies": {
    "@types/qs": "^6.9.15",
    "eslint": "^9.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "minimist": "^1.2.8",
    "prettier": "^3.3.3",
    "yaml": "^2.5.0",
    "yargs": "^17.7.2"
  },
  "license": "Apache-2.0"
}
